<?xml version="1.0"?>
<launch>

  <arg name="prefix" default="marrtino_"/>
  <arg name="static_map" default="true"/>

  <arg name="cmd_vel_topic" default="move_base/cmd_vel"/> <!-- using twist mux -->
  <arg name="odom_topic" default="marrtino_base_controller/odom"/>

  <arg name="global_frame" default="$(arg prefix)map"/>
  <arg name="odom_frame" default="$(arg prefix)odom"/>
  <arg name="base_frame" default="$(arg prefix)base_footprint"/>

  <arg name="base_global_planner" default="navfn/NavfnROS"/>
  <arg name="base_local_planner" default="dwa_local_planner/DWAPlannerROS"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <param name="base_global_planner" value="$(arg base_global_planner)"/>
    <param name="base_local_planner" value="$(arg base_local_planner)"/>
    <rosparam file="$(find marrtino_navigation)/config/global_planner_params.yaml" command="load"/>
    <rosparam file="$(find marrtino_navigation)/config/planner.yaml" command="load"/>

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="$(find marrtino_navigation)/config/costmap_common.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find marrtino_navigation)/config/costmap_common.yaml" command="load" ns="local_costmap" />

    <param name="global_costmap/obstacle_layer/scan/sensor_frame" value="$(arg prefix)laser_link"/>
    <param name="local_costmap/obstacle_layer/scan/sensor_frame" value="$(arg prefix)laser_link"/>

    <!-- local costmap, needs size -->
    <rosparam file="$(find marrtino_navigation)/config/costmap_local.yaml" command="load" ns="local_costmap" />
    <param name="local_costmap/width" value="4.0"/>
    <param name="local_costmap/height" value="4.0"/>

    <param name="local_costmap/robot_base_frame" value="$(arg base_frame)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame)"/>

    <!-- static global costmap, static map provides size -->
    <rosparam file="$(find marrtino_navigation)/config/costmap_global_static.yaml" command="load" ns="global_costmap" if="$(arg static_map)"/>

    <!-- global costmap with laser, for odom_navigation -->
    <rosparam file="$(find marrtino_navigation)/config/costmap_global_laser.yaml" command="load" ns="global_costmap" unless="$(arg static_map)"/>

    <param name="global_costmap/width" value="100.0" unless="$(arg static_map)"/>
    <param name="global_costmap/height" value="100.0" unless="$(arg static_map)"/>

    <param name="global_costmap/global_frame" value="$(arg odom_frame)" unless="$(arg static_map)"/>
    <param name="global_costmap/global_frame" value="$(arg global_frame)" if="$(arg static_map)"/>

    <param name="global_costmap/robot_base_frame" value="$(arg base_frame)"/>

    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame)"/>

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)" />
    <remap from="odom" to="$(arg odom_topic)" />
  </node>

</launch>
